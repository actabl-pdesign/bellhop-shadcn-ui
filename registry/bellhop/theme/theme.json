      "--muted": "var(--color-neutral-50)",
      "--muted-foreground": "var(--color-neutral-800)",
      "--accent": "var(--color-indigo-100)",
      "--accent-foreground": "var(--color-indigo-700)",
      "--destructive": "var(--color-red-700)",
      "--success": "var(--color-green-700)",
      "--border-color": "var(--color-neutral-100)",
      "--input": "var(--color-neutral-300)",
      "--ring": "var(--color-indigo-700)",
      "--ring-destructive": "var(--color-red-700)",
      "--ring-success": "var(--color-green-700)",
      "--chart-1": "var(--color-rose-500)",
      "--chart-2": "var(--color-indigo-500)",
      "--chart-3": "var(--color-violet-400)",
      "--chart-4": "var(--color-rose-600)",
      "--chart-5": "var(--color-violet-600)",
