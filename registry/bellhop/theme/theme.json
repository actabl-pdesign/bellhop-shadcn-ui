      "--chart-3": "var(--color-violet-400)",
      "--chart-4": "var(--color-rose-600)",
      "--chart-5": "var(--color-violet-600)",
      "--sidebar": "var(--color-white)",
      "--sidebar-foreground": "var(--color-neutral-700)",
      "--sidebar-primary": "var(--color-indigo-300)",
      "--sidebar-primary-foreground": "var(--color-indigo-800)",
