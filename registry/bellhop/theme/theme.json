    "light": {
      "--background": "var(--color-white)",
      "--foreground": "var(--color-neutral-900)",
      "--bg": "var(--color-white)",
      "--fg": "var(--color-neutral-900)",
      "--bg-inverted": "var(--color-neutral-900)",
